<%= form_for @patient do |f| %>

  <div>
    <%= f.label :first_name, 'First Name' %>
    <%= f.text_field :first_name, placeholder: 'John' %>
  </div>
    <br>
  <div>
    <%= f.label :last_name, 'Last Name' %>
    <%= f.text_field :last_name, placeholder: 'Nash' %>
  </div>
 <br>
  <div>
    <%= f.label :diagnosis, 'Diagnosis' %>
    <%= f.text_field :diagnosis, placeholder: 'Schizophrenia' %>
  </div>
 <br>
  <div>
    <%= f.label :born_on, style: "DOB" %>
    <%= f.date_field :born_on, placeholder: '13/06/1928' %>
  </div>
 <br>
  <div>
    <%= f.submit %>
  </div>
<% end %>
