<h1>All Patients:</h1>
<%= link_to "Add New Patient", new_patient_path %>

<br>
<br>
<table>
    <tr>
        <th>Patient ID</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Diagnosis</th>
        <th>DOB</th>
        <th>Actions</th>
    </tr>
    <% @patients.each do |patient| %>
        <tr>            
            <td><%= link_to patient.id, patient_path(patient) %></td>
            <td> <%= patient.first_name %></td>
            <td> <%= patient.last_name %></td>
            <td> <%= patient.diagnosis %></td>
            <td> <%= patient.born_on %></td>
            <td><%= link_to "Edit Patient", edit_patient_path(patient) %>
        </tr>
    <% end %>
</table>