<h1>All Patients:</h1>

<br><br>

<table>
    <tr>
        <th>Patient ID</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Diagnosis</th>
        <th>DOB</th>
        <th>Actions</th>
    </tr>
    <% @patients.each do |patient| %>
        <tr>            
            <td><%= link_to patient.id, patient_path(patient) %></td>
            <td> <%= patient.first_name %></td>
            <td> <%= patient.last_name %></td>
            <td> <%= patient.diagnosis %></td>
            <td> <%= patient.born_on %></td>
        </tr>
    <% end %>
</table>